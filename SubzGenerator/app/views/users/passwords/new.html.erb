<hgroup>
  <h1>Forgot your password?</h1>
</hgroup>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="group">
    <%= f.email_field :email, autofocus: true %><span class="highlight"></span><span class="bar"></span>
    <label>Email</label>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", {:style=>'margin-top: 20px; font-size: 14px;', :class => "button buttonBlue"} %>
  </div>

  <div id="links" style="text-align: center; padding-top: 15px;">
    <%= render "users/shared/links" %>
  </div>

<% end %>

<link href="/assets/login_form.css" media="screen" rel="stylesheet" />

<% javascript 'forms.js' %>
